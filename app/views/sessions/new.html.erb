<div class="row" style="margin:0px">
  <div class="col-sm-4"></div>
  <div class="col-sm-4" style="padding-left:0px">
    <%= link_to "Sign Up",  signup_path, :class =>" float-right btn btn-sign-up btn-outline-primary shadow-text", :role => "button"%>
    <div id="sign-in" class="shadow-text">Sign In</div>
    <div id="sign-in-form"class="form">
      <%= form_tag sessions_path do |form| %>
        <div class='form-group'>
          <%= label_tag :email, "Your Email:", class:'form-text shadow-text'%>
          <%= text_field_tag :email, nil, class:"form-input" %>
        </div>
        <div class='form-group'>
          <%= label_tag :password, "Your Password:", class:'form-text shadow-text'%>
          <%= password_field_tag :password, nil, class:"form-input"%>
        </div>
        <div class='actions'>
          <%= submit_tag 'Login', :class=>"btn btn-basic btn-login" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-4"></div>
</div>
