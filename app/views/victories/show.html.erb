<br>
<h1 id ="c-nation" class="text-center">Victory Objectives</h1>

<div class="container-fluid" style="margin-bottom:5.0vw">
  <div class="row content">
    <div class="col-sm-6">
      <div class="container">
        <h1 id="v-title" class="text-center" style="color:#ff1a1a"> Axis </h1>
        <% @game.victories.each do |v| %>
          <% if v.axis %>
            <% if v.enabled %>
              <button data-id="<%=v.vid%>" onclick="victory(this)" id="victory-<%=v.vid%>" style="margin-bottom:0.5vw;padding:0.75vw;background:#ff6666;text-align:left;font-size:1.0vw;" class="victory btn btn-block" role="button"><strong><%= v.name %></strong> :: <%=v.text %></button>
            <%else%>
              <button data-id="<%=v.vid%>" onclick="victory(this)" id="victory-<%=v.vid%>" style="margin-bottom:0.5vw;padding:0.75vw;text-align:left;font-size:1.0vw;" class="victory btn btn-block" role="button"><strong><%= v.name %></strong> :: <%=v.text %></button>
            <%end%>
          <%end%>
        <%end %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="container">
        <h1 id="v-title" class="text-center" style=color:#0040ff> Allies </h1>
        <% @game.victories.each do |v| %>
          <% if !v.axis %>
            <% if v.enabled %>
              <button data-id="<%=v.vid%>" id="victory-<%=v.vid%>" style="margin-bottom:0.5vw;padding:0.75vw;background:#66ccff;text-align:left;font-size:1.0vw;" class="victory btn btn-block" role="button"><strong><%= v.name %></strong> :: <%=v.text %></button>
            <%else%>
              <button data-id="<%=v.vid%>" onclick="victory(this)" id="victory-<%=v.vid%>" style="margin-bottom:0.5vw;padding:0.75vw;text-align:left;font-size:1.0vw;" class="victory btn btn-block" role="button"><strong><%= v.name %></strong> :: <%=v.text %></button>
            <%end%>
          <%end%>
        <%end %>
      </div>
    </div>
  </div>
</div>
<div class="bottomaligned" style="background-color:#353535;width:100%">
  <%= link_to "Back", game_path(current_game.uuid), :class =>"btn btn-menu", :role => "button" %>
  <%= link_to "National Objectives", nation_path(current_eco.uuid), :class =>"btn btn-menu", :role => "button" %>
  <%= link_to "Research and Development", research_path(current_game.uuid), :class =>"btn btn-menu", :role => "button" %>
  <button class="btn btn-menu reset-victory" onclick="reset_GrassHopper()"role= "button">Reset</button>
</div>
