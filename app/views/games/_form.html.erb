<%= form_for @game do |f| %>

  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@game.errors.count, "error") %>
        prohibited this game from being created:
      </h2>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    Game Type:
    <%= select(:game, :game_name, [['1940'],['1940 GrassHopper'],['1942']]) %>
  </p>
  <p>
    Game Name:
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
