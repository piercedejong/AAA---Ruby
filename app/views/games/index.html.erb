<br>
<h1 class=" title text-center">Load Game</h1>
<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <div class="list-group">
        <% current_user.games.each do |game| %>
          <a href="<%= game_path(game.uuid) %>" class="btn btn-basic btn-lg" role="button" ><%= game.name %></a>
          <%= link_to 'Delete', game_path(game.uuid), method: :delete,data: {confirm: "Confirm deletion of game: "+game.name} %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-4">
    </div>
  </div>
</div>
<div class="bottom">
  <%= link_to "Back", home_path, :class =>"btn btn-basic btn-lg", :role => "button", :style => "font-size:40px"%>
</div>
