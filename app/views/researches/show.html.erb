  <div class="row content">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <div class="container">
        <h1 id ="c-nation" class="text-center">Research</h1>
      </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-6">
      <div id="research-div" class="container">
        <h1 id="research-title" class="text-center">Chart 1</h1>
      </div>
    </div>
    <div class="col-sm-6">
      <div id="research-div" class="container">
        <h1 id="research-title" class="text-center">Chart 2</h1>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row content">
    <% current_nation.researches.each do |r| %>
      <div class="col-sm-1 research">
        <button class="container research-title text-center btn">
          <span id="research-tit" class="item text-center" data-toggle="tooltip" title="<%= current_nation.researches.find_by(rid: r.rid).text %>" style="font-size:1.0vw"><strong><%= current_nation.researches.find_by(rid: r.rid).name %></strong></span>
        </butotn>
      </div>
    <%end%>
    <% current_nation.researches.each do |r| %>
      <div class="col-sm-1 research">
        <div class="container research">
          <% current_game.nations.each do |n| %>
          <% if (!n.name.eql? "Pacific") && (!n.name.eql? "China") %>
            <% if n.researches.find_by(rid: r.rid).enabled %>
              <button data-id="<%=r.rid%>" data-name="<%=n.name%>" id="<%=n.name%>-<%=r.rid%>" class="btn btn-block research-button" role="button" style="background:<%=n.color%>;margin-top:5px"><%=n.name%></buttton>
            <% else%>
              <button data-id="<%=r.rid%>" data-name="<%=n.name%>" id="<%=n.name%>-<%=r.rid%>" onclick="research(this)" class="btn btn-block research-button" role="button" style="margin-top:5px"><%=n.name%></buttton>
            <%end %>
          <%end %>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="bottom">
  <a href="<%= game_path(current_game.uuid) %>" class="btn btn-info btn-lg" role="button">Back</a>
  <a href="<%= nation_path(current_eco.uuid) %>" class="btn btn-info btn-lg" role="button">National Objectives</a>
  <a href="<%= victory_path(current_game.uuid) %>" class="btn btn-info btn-lg" role="button">Victory Objectives</a>
</div>
